@model ML.Libro
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>LIBROS REGISTRADOS</h2>

<div style=" float:right">
    @Html.ActionLink("Agregar","Form","Libro",htmlAttributes: new {@class ="btn btn-success" })
</div>

<br />
<br />

    <table class="table table-hover table-striped table-bordered table-responsive"  >
        <thead>
            <tr>
                <td style="text-align:center"> Editar</td>
                <td style="text-align:center"> Id Libro</td>
                <td style="text-align:center"> Titulo</td>
                <td style="text-align:center"> Fecha de Publicacion</td>
                <td style="text-align:center"> Numero de paginas </td>
                <td style="text-align:center"> Autor </td>
                <td style="text-align:center"> Eliminar </td>
            </tr>
        </thead>

        <tbody>
            @foreach (ML.Libro libro in Model.Libros)
            {
                <tr>
                    <td style="text-align: center"><button><a class="glyphicon glyphicon-pencil" href="@Url.Action("Form","Libro", new {IdLibro = libro.IdLibro})" ></a></button></td>
                    <td style="text-align:center">@libro.IdLibro</td>
                    <td style="text-align:center">@libro.Nombre</td>
                    <td style="text-align:center">@libro.FechaPublicacion</td>
                    <td style="text-align:center">@libro.NumeroPaginas</td>
                    <td style="text-align:center">@libro.NombreAutor</td>
                    <td style="text-align: center"><button><a class="glyphicon glyphicon-minus" href="@Url.Action("Delete","Libro", new {IdLibro = libro.IdLibro})"></a></button></td>
                </tr>

            }
        </tbody>
    </table>


